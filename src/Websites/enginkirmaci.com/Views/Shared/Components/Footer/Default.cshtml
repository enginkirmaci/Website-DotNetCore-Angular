@model MasterViewModel

<section id="Section-6">
    <div class="container  text-center">
        <div class="row">

            <p class="top">
                <a href="#top">
                    <span class="fa-stack fa-lg">
                        <i class="fa fa-circle fa-stack-2x"></i>
                        <i class="fa fa-angle-double-up fa-stack-1x fa-inverse"></i>
                    </span>
                </a>
            </p>

            @if (Model.Settings.ContainsKey("facebook"))
            {
                <a href="@Model.Settings["facebook"]" target="_blank" data-toggle="tooltip" title="Facebook">
                    <i class="fa fa-2x fa-facebook pad-right5 grey"></i>
                </a>
            }
            @if (Model.Settings.ContainsKey("twitter"))
            {
                <a href="@Model.Settings["twitter"]" target="_blank" data-toggle="tooltip" title="Twitter">
                    <i class="fa fa-2x fa-twitter pad-right5 grey"></i>
                </a>
            }
            @if (Model.Settings.ContainsKey("linkedin"))
            {
                <a href="@Model.Settings["linkedin"]" target="_blank" data-toggle="tooltip" title="LinkedIn">
                    <i class="fa fa-2x fa-linkedin pad-right5 grey"></i>
                </a>
            }
            @if (Model.Settings.ContainsKey("github"))
            {
                <a href="@Model.Settings["github"]" target="_blank" data-toggle="tooltip" title="GitHub">
                    <i class="fa fa-2x fa-github grey"></i>
                </a>
            }

            <p class="copyright pad10">
                &copy; 2010 <a href="@Model.Website.Url" title="@Model.Website.Name">@(Model.Settings.ContainsKey("site-long-name") ? Model.Settings["site-long-name"] : Model.Website.Name)</a>
            </p>
        </div>
    </div>
</section>